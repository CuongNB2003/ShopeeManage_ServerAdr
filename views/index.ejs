<%- include('./inc/header.ejs') %>

<h2 class="text-center mb-2" style="color: #ea5120;"><%= title %></h2>

<div class="row">
    <div class="row col-md-6 col-sm-12">
        <div class="col-md-6 col-sm-12 pt-4">
            <div class="card boderCard">
                <div class="row card-body">
                    <div class="col-5">
                        <i class="bi bi-people p-3" style="font-size: 6rem; color: #ea5120;"></i>
                    </div>
                    <div class="col-7">
                        <h4>Khách hàng</h4>
                        <p><b>
                            <%= user %> khách hàng
                            </b></p>
                        <p class="">Tổng khách hàng được quản lý.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 pt-4">
            <div class="card boderCard">
                <div class="row card-body">
                    <div class="col-5">
                        <i class="bi bi-inboxes p-3" style="font-size: 6rem; color: #ea5120;"></i>
                    </div>
                    <div class="col-7">
                        <h4>Sản phẩm</h4>
                        <p><b>
                            <%= product %> sản phẩm
                            </b></p>
                        <p class="info-tong">Tổng sản phẩm được quản lý.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 pt-4">
            <div class="card boderCard">
                <div class="row card-body">
                    <div class="col-5">
                        <i class="bi bi-diagram-3 p-3" style="font-size: 6rem; color: #ea5120;"></i>
                    </div>
                    <div class="col-7">
                        <h4>Thể loại</h4>
                        <p><b>
                               <%= category %> thể loại
