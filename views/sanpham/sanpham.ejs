<%- include('../inc/top.ejs') %>

    <!-- Thanh Dieu khien -->
    <div class="row mt-4">
        <nav class="navbar col-auto">
            <div class="container-fluid">
                <form class="d-flex" role="search">
                    <input class="form-control me-2 border border-primary" type="search" placeholder="Search"
                        aria-label="Search" style="width: 300px;">
                    <button class="btn btn-outline-primary" type="submit" style="width: 150px;">Tìm kiếm</button>
                </form>
            </div>
        </nav>
        <div class="col-auto mt-2">
            <a href="/sanpham/add">
                <button type="button" class="btn btn-outline-primary" style="width: 150px;">Thêm sản phẩm</button>
            </a>
        </div>
        <div class="col-auto mt-2">
            <select class="form-select border border-primary" aria-label="Default select example" style="width: 150px;">
                <option selected>Sắp xếp</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>
        <div class="col-auto mt-2">
            <select name="theloai" class="form-select border border-primary" aria-label="Default select example" style="width: 150px;">
                <option selected>Lọc</option>
                <% listTL.forEach( (row) => { %>
                    <option value="<%= row._id %>"><%= row.name %></option>
                <% }); %>
            </select>
        </div>
    </div>
    <!-- bang danh sach -->
    <div class="mt-4">
        <table class="table table-bordered table-striped border border-primary" style="margin-top: 15px;">
            <tr>
                <th>STT</th>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Thể loại</th>
                <th>Giá </th>
                <th>Mô tả</th>
                <th>Sửa</th>
                <th>Xóa</th>
            </tr>
            <% listSP.forEach( (row, index) => { %>
                <tr>
                    <td><%= index + 1%></td>
                    <td><img src="<%= row.image  %>" alt="" srcset="" width="100px" height="100px"></td>
                    <td><a href="/sanpham/chitiet/<%= row._id %>" style="text-decoration-line: none; color: black;"><%= row.name %></a></td>
                    <td><%= row.id_theloai.name %></td>
                    <td><%= row.price %></td>
                    <td><%= row.desc %></td>
                    <td><a href="/sanpham/edit/<%= row._id %>"><img src="/images/edit.png" alt="" srcset="" width="50px" height="50px"></a></td>
                    <td>
                        <img src="/images/delete.png" alt="" srcset="" width="50px" height="50px" 
                        data-bs-toggle="modal" data-bs-target="#xoa<%= row._id %>">
                     </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="xoa<%= row._id %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa Thể Loại</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc chắn xóa hay không ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">Hủy</button>
                            <a href="/sanpham/delete/<%= row._id %>" class="btn btn-primary">Xóa</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </table>
    </div>
    <!-- danh muc -->
    <div class="btn-toolbar justify-content-end mt-3" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group" role="group" aria-label="First group">
            <button type="button" class="btn btn-outline-secondary">1</button>
            <button type="button" class="btn btn-outline-secondary">2</button>
            <button type="button" class="btn btn-outline-secondary">3</button>
            <button type="button" class="btn btn-outline-secondary">4</button>
            <button type="button" class="btn btn-outline-secondary">5</button>
            <button type="button" class="btn btn-outline-secondary">6</button>
        </div>
    </div>

    <%- include('../inc/bottom.ejs') %>