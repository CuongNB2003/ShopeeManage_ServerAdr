<%- include('../inc/top.ejs') %>
    <div class="card border border-danger rounded-2 mt-4">
        <div class="text-center mt-5">
            <p style="color: red; font-style: italic; font-size: 28px;">
                <%= msg %>
            </p>
        </div>
        <form class="p-5" method="POST">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 form-floating mb-3">
                    <input type="text" class="form-control border border-danger rounded-2" id="floatingInput"
                       name="username" placeholder="Password" required>
                    <label class="ms-3" for="floatingInput">Nhập tài khoản</label>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 form-floating mb-3">
                    <input type="password" class="form-control border border-danger rounded-2" id="floatingInput"
                       name="password" placeholder="Password" required>
                    <label class="ms-3" for="floatingInput">Nhập mật khẩu</label>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-10 m-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Lưu tài khoản</label>
                </div>
                <div class="col-1"></div>
            </div>

            <div class="mt-4 text-center">
                <button type="submit" class="btn btn-outline-danger"
                    style="width: 300px; height: 48px; font-size: 24px; font-weight: 500;">Login</button>
            </div>
        </form>
    </div>
    <%- include('../inc/bottom.ejs') %>